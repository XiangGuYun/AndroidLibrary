<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="internet.yxd.project1.context.MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"/>


    <RadioGroup
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/bottom_menu"
        >

        <RadioButton
            android:id="@+id/rb_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/news"
            android:text="资讯"
            style="@style/btm_menu"
            android:textColor="#ff1231"/>

        <RadioButton
            style="@style/btm_menu"
            android:id="@+id/rb_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/shequ"
            android:textColor="@color/btm_title_unselect"
            android:text="社区"/>

        <RadioButton
            style="@style/btm_menu"
            android:id="@+id/rb_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/book"
            android:textColor="@color/btm_title_unselect"
            android:text="视频"/>

        <RadioButton
            style="@style/btm_menu"
            android:id="@+id/rb_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/person"
            android:text="我"/>


    </RadioGroup>




</LinearLayout>
