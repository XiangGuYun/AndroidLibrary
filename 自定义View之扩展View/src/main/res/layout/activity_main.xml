<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yxd.view1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <yxd.view1.pregressbar.HorizontalProgressBar
            android:id="@+id/pb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            />

        <yxd.view1.pregressbar.HorizontalProgressBar
            android:id="@+id/pb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="100"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            app:progress_text_color="#ffff0000"
            app:progress_unreach_color="#44ff0000"
            app:progress_reach_color="#ffff0000" />

        <yxd.view1.pregressbar.HorizontalProgressBar
            android:id="@+id/pb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="30"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            app:progress_text_color="#44ff0000"
            app:progress_unreach_color="#ff000000"/>

        <yxd.view1.pregressbar.RoundProgressBar
            android:id="@+id/pb4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:radius="60dp"
            android:progress="30"/>

    </LinearLayout>

</ScrollView>
